<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>${HOSTNAME}</title>

    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/css/style.css">
  </head>
  <body>
    <h1>${HOSTNAME}</h1>
% if CHANGELOG:
    <p><a href="changelog">Changelog</a></p>
% endif
    <p><a href="stats">Server stats</a></p>
    <p><a href="ports">Open TCP ports</a></p>
    <p><a href="ssh">SSH host key fingerprints</a></p>
% if DISK_USAGE_LIST:
    <p><a href="du">Disk usage for ${'all partitions' if DISK_USAGE == 'all' else ', '.join(DISK_USAGE_LIST)}</a></p>
% endif
% for link, title in EXTRA_LINKS_MAP:
    <p><a href="${link}">${title}</a></p>
% endfor
  </body>
</html>
